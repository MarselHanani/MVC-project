@model ProductViewModel

<div class="mt-2">
    <input asp-for="Title" placeholder="Title" type="text"  class="form-control"/>
    <span class="text-danger" asp-validation-for="Title"></span>
</div>
<div class="mt-2">
    <input asp-for="Description" placeholder="Description" type="text"  class="form-control"/>
    <span class="text-danger" asp-validation-for="Description"></span>
</div>
<div class="mt-2">
    <input asp-for="Author" placeholder="Author" type="text"  class="form-control"/>
    <span class="text-danger" asp-validation-for="Author"></span>
</div>
<div class="mt-2">
    <input asp-for="ISBN" placeholder="ISBN" type="text"  class="form-control"/>
    <span class="text-danger" asp-validation-for="ISBN"></span>
</div>
<div class="mt-2">
    <input asp-for="ListPrice" placeholder="ListPrice" type="number" class="form-control"/>
    <span class="text-danger" asp-validation-for="ListPrice"></span>
</div>
<div class="mt-2">
    <input asp-for="Price" placeholder="Price" type="number" class="form-control"/>
    <span class="text-danger" asp-validation-for="Price"></span>
</div>
<div class="mt-2">
    <input asp-for="Price50" placeholder="Price50" type="number" class="form-control"/>
    <span class="text-danger" asp-validation-for="Price50"></span>
</div> 
<div class="mt-2">
    <input asp-for="Price100" placeholder="Price100" type="number" class="form-control"/>
    <span class="text-danger" asp-validation-for="Price100"></span>
</div>

<div class="mt-2">
    <label asp-for="CategoryId" class="p-0">Category</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.Category">
        <option selected disabled>--Select Category--</option>
    </select>
    <span class="text-danger" asp-validation-for="CategoryId"></span>
</div>
<div class="mt-2">
    <input asp-for="Image" placeholder="image"  class="form-control"/>
    <span class="text-danger" asp-validation-for="Image"></span>
</div>